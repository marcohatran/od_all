                                 <field name="identity_2"/>
                                 <field name="date_of_birth" />
                                 <field name="address" />
                                 <field name="province"/>
                                 <field name="avatar" widget="image"/>
                                 <field name="height"/>
                                 <field name="sequence_exam" widget="handle"/>
                            </tree>
                        </field>
                    </page>

                 </notebook>
             </form>
         </field>
