    <record id="view_manage_invoice_sohokhau" model="ir.ui.view">
         <field name="name">Đơn hàng</field>
         <field name="model">intern.invoice</field>
         <field name="arch" type="xml">
             <form >
                 <header>

                 </header>

                 <notebook>
                    <page string="Danh sách trúng tuyển" >
                        <field name="interns_pass_doc" string="Danh sách thực tập sinh"  mode="tree"
                               context="{'form_view_ref':'hh_sohokhau.view_form_family'}" limit="5000" >

                             <tree string="Chi tiết thực tập sinh"  create="false" default_order="sequence_exam" delete="false" limit="5000">
                                 <field name="name_without_signal" />
