<odoo>
    <record id="view_province_form" model="ir.ui.view">
        <field name="name">Tỉnh/TP</field>
        <field name="model">province</field>
        <field name="arch" type="xml">
            <form string="Tỉnh/TP">
                <group>
                    <field name="name"/>
                    <field name="distance_to_hn"/>
                </group>
            </form>
        </field>
    </record>

