                                <field name="year_start" string="Năm bắt đầu" widget="mask" data-inputmask-mask="9999"/>
                                <field name="month_end" string="Tháng"/>
                                <field name="year_end" string="Năm kết thúc"/>
                                <field name="company" style="background-color: #ffff96"/>
                                <field name="description" style="background-color: #ffff96"/>
                                <field name="sequence" widget="handle"/>
                            </tree>
